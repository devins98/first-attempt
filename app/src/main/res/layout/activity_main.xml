<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.devinsmith.colorcustomapp_smithdev20.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10sp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:orientation="horizontal">

            <com.example.devinsmith.colorcustomapp_smithdev20.Face
                android:id="@+id/surfaceView"
                android:layout_width="400sp"
                android:layout_height="400sp"
                android:layout_weight="0"
                android:backgroundTint="@color/Button2"
                android:clickable="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:foregroundTint="@color/Backround2"
                android:orientation="vertical">


                <Button
                    android:id="@+id/randomFaceButton"
                    android:layout_width="wrap_content"
                    android:layout_height="75sp"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:text="Random Face"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/spinnerHairStyleSelectionText"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginHorizontal="15sp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Choose Hair Style: Please use seekbar to implement"
                    android:textSize="24sp" />

                <Spinner
                    android:id="@+id/hairStyleSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_weight="0"
                    android:text="Hair Style" />

                <TextView
                    android:id="@+id/radioButtonSelectionText"
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginHorizontal="15sp"
                    android:layout_weight="0"
                    android:gravity="left|right"
                    android:text="Choose Color For:"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:checkedButton="@+id/radioButtonEyes">

                        <RadioButton
                            android:id="@+id/radioButtonEyes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimary"
                            android:text="Eyes"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/radioButtonHair"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hair"
                            android:textSize="24sp" />

                        <RadioButton
                            android:id="@+id/radioButtonSkin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Skin"
                            android:textSize="24sp" />

                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRed"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Red"
                android:textColor="@color/Red"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBarRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:max="255"
                android:progress="0"
                android:progressTint="@color/Red"
                android:thumb="@android:drawable/btn_star"
                android:thumbTint="@color/Red" />

            <TextView
                android:id="@+id/textViewRedVal"
                android:layout_width="10sp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/Red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewGreen"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Green"
                android:textColor="@color/Green"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBarGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:max="255"
                android:progressTint="@color/Green"
                android:thumb="@android:drawable/btn_star"
                android:thumbTint="@color/Green" />

            <TextView
                android:id="@+id/textViewGreenVal"
                android:layout_width="10sp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/Green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewBlue"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Blue"
                android:textColor="@color/Blue"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBarBlue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:max="255"
                android:progressTint="@color/Blue"
                android:thumb="@android:drawable/btn_star"
                android:thumbTint="@color/Blue" />

            <TextView
                android:id="@+id/textViewBlueVal"
                android:layout_width="10sp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/Blue" />

        </LinearLayout>

    </LinearLayout>
</android.widget.LinearLayout>
